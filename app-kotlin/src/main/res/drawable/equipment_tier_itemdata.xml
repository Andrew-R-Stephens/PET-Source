<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <item>
            <shape>
                <solid android:color="@color/transparent"/>
                <size android:height="200dp" android:width="200dp"/>
            </shape>
        </item>

        <item
            android:drawable="@drawable/evidence_item_layer_grid"
            android:top="0dp"
            android:bottom="0dp"
            android:left="0dp"
            android:right="0dp"/>

        <item
            android:id="@+id/ic_type"
            android:left="10dp"
            android:right="10dp"
            android:top="10dp"
            android:bottom="10dp">
            <bitmap
                android:src="@drawable/icon_shop_crucifix_1"
            >
            </bitmap>
        </item>

        <item
            android:id="@+id/ic_tier">
            <scale
                android:scaleWidth="75%"
                android:scaleHeight="75%"
                android:scaleGravity="start|top"
                android:drawable="@drawable/equipment_tier_square_itemdata"
                />
        </item>

        <item>
            <shape>
                <stroke
                    android:width="1dp"
                    android:color="?attr/codex_3"/>
            </shape>
        </item>

    </layer-list>
