<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <size
                android:width="15dp"
                android:height="15dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="70dp"
                android:startColor="?attr/progressBarColorThumbGradientStart"
                android:centerColor="?attr/progressBarColorThumbGradientEnd" />

        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="15dp"
                android:height="15dp"/>
            <corners android:radius="15dp"/>
            <stroke android:width="1dp" android:color="?attr/progressBarColorThumbOutline"/>
        </shape>
    </item>
</layer-list>