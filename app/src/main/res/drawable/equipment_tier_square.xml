<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <item>
    <layer-list>
      <item>
        <selector>
          <item
            app:state_selected="false">
            <shape>
              <solid
                  android:color="?attr/codex3_tierBackground" />
            </shape>
          </item>
          <item
              app:state_selected="true" >
            <shape>
              <solid
                  android:color="?attr/codex4_border" />
            </shape>
          </item>
        </selector>
      </item>

      <item
          android:id="@+id/icon_tier"
          android:bottom="8dp"
          android:left="8dp"
          android:right="8dp"
          android:top="8dp"
          android:drawable="@drawable/equipment_tier_badge">

      </item>

    </layer-list>

  </item>

</selector>
