<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_mainevidence"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/constraintLayout_sanityTracking"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout6"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textLabel_headerLeft"
            style="?attr/primaryFont_Regular"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/evidence_ghosts_title"
            android:textColor="?attr/titleFontColor"
            app:layout_constraintBottom_toTopOf="@+id/dividerA"
            app:layout_constraintEnd_toEndOf="@+id/scrollview_ghostList"
            app:layout_constraintHeight_percent=".08"
            app:layout_constraintStart_toStartOf="@+id/scrollview_ghostList"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <View
            android:id="@+id/dividerA"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@drawable/icon_strikethrough_1"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/scrollview_ghostList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textLabel_headerLeft"
            app:layout_constraintWidth_percent=".9" />

        <ScrollView
            android:id="@+id/scrollview_ghostList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fadeScrollbars="false"
            android:fadingEdgeLength="50sp"
            android:fillViewport="true"
            android:padding="15sp"
            android:requiresFadingEdge="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:verticalScrollbarPosition="left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerA">

            <LinearLayout
                android:id="@+id/layout_leftList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout8"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textLabel_headerRight"
            style="?attr/primaryFont_Regular"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/evidence_evidence_title"
            android:textColor="?attr/titleFontColor"
            app:layout_constraintBottom_toTopOf="@+id/divider2"
            app:layout_constraintEnd_toEndOf="@+id/scrollview_evidenceList"
            app:layout_constraintHeight_percent=".08"
            app:layout_constraintStart_toStartOf="@+id/scrollview_evidenceList"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/icon_strikethrough_1"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/scrollview_evidenceList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textLabel_headerRight"
            app:layout_constraintWidth_percent=".9" />

        <ScrollView
            android:id="@+id/scrollview_evidenceList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fadeScrollbars="false"
            android:fadingEdgeLength="50sp"
            android:fillViewport="true"
            android:padding="15sp"
            android:requiresFadingEdge="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:verticalScrollbarPosition="left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2">

            <LinearLayout
                android:id="@+id/layout_rightList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>