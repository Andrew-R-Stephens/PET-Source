<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="com.tritiumgaming.phasmophobiaevidencepicker.views.account.AccountDetailsView" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardView_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tritiumgaming.phasmophobiaevidencepicker.views.account.AccountCreditsView
            android:id="@+id/cardview_creditview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="?attr/backgroundColorOnBackground"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/account_icon"
            app:layout_constraintHeight="wrap_content"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth="wrap_content" />

        <com.tritiumgaming.phasmophobiaevidencepicker.views.account.AccountIconView
            android:id="@+id/account_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:accountInitials="TN"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/cardview_creditview"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>

