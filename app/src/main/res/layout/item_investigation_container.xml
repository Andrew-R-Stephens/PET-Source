<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_container"
        style="?attr/primaryFont_Regular"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Title"
        tools:ignore=",HardcodedText"
        android:textColor="?attr/titleFontColor"
        app:layout_constraintEnd_toEndOf="@+id/scrollview"
        app:layout_constraintHeight_min="40dp"
        app:layout_constraintHeight_percent=".05"
        app:layout_constraintStart_toStartOf="@+id/scrollview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@drawable/icon_strikethrough_1"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/label_container"
        app:layout_constraintStart_toStartOf="@+id/label_container"
        app:layout_constraintTop_toBottomOf="@+id/label_container"
        app:layout_constraintWidth_percent=".9" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="@android:style/Widget.Material.Light.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:indeterminateTintMode="multiply"
        android:indeterminateTint="?attr/titleFontColor"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scrollview"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="2sp"
        android:fadeScrollbars="false"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="8dp"
        android:fillViewport="true"
        android:requiresFadingEdge="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarFadeDuration="-1"
        android:scrollbarStyle="insideInset"
        android:verticalScrollbarPosition="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <com.TritiumGaming.phasmophobiaevidencepicker.activities.fragments.investigation.evidence.views.InvestigationList
			android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </ScrollView>
