<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="?attr/enforcedTheme"
    android:background="@color/white_M100"
    tools:parentTag="com.tritiumgaming.phasmophobiaevidencepicker.activities.mainmenus.marketplace.views.items.MarketThemeView">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/backgroundColorOnBackground"
            app:layout_constraintEnd_toStartOf="@+id/constraintLayout75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="24dp"
                style="?attr/primaryFont_Bold_AutoSqueeze"
                android:textColor="?attr/textColorBodyEmphasis"
                android:gravity="center"
                android:padding="4dp"
                android:textAllCaps="true"
                android:text="?attr/theme_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout75"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="96dp"
                android:scaleType="fitCenter"
                android:src="?attr/theme_badge"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView5"
                app:layout_constraintTop_toTopOf="parent">

                <GridLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:rowCount="2"
                    android:columnCount="4"
                    android:useDefaultMargins="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="?attr/theme_coreColor_1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="?attr/theme_coreColor_2"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="?attr/theme_coreColor_3"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="?attr/theme_coreColor_4"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="?attr/theme_coreColor_5"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="?attr/theme_coreColor_6"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="?attr/theme_coreColor_7"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="?attr/theme_coreColor_8"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1" />

                </GridLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/backgroundColorOnBackground"
            android:backgroundTintMode="multiply"
            android:backgroundTint="#4DFFFFFF"
            android:layout_marginBottom="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_transactItem"
                style="?attr/quaternaryFont_Bold_Manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/backgroundColorOnBackground"
                android:text="GET"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/creditsIcon"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/creditsIcon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="8dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:src="@drawable/ic_shop_cost"
                android:tintMode="multiply"
                android:tint="?attr/backgroundColorOnBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/label_credits_cost"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/button_transactItem"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_credits_cost"
                style="?attr/quaternaryFont_Bold_Manual"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="start|center_vertical"
                android:paddingVertical="8dp"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:text="69"
                android:textSize="24sp"
                android:textColor="?attr/backgroundColorOnBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/creditsIcon"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:alpha=".1"
        android:cropToPadding="true"
        android:foregroundGravity="right"
        android:scaleType="fitEnd"
        android:scaleX="5"
        android:scaleY="5"
        android:src="?attr/theme_badge"
        android:translationZ="-1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>