<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AutoTextSizeBody">
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">50sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="TypewriterRegular" parent = "AutoTextSizeBody">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/bodyFontColor</item>
    </style>

    <style name="TypewriterBold" parent = "AutoTextSizeBody">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/bodyFontColor</item>
    </style>

    <style name="TypewriterRegular_Manual">
        <item name="android:fontFamily">serif-monospace</item>
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/bodyFontColor</item>
    </style>

    <style name="NorseRegular" parent = "AutoTextSizeBody">
        <item name="android:fontFamily">@font/norse</item>
        <item name="fontFamily">@font/norse</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/bodyFontColor</item>
    </style>

    <style name="NorseBold" parent = "AutoTextSizeBody">
        <item name="android:fontFamily">@font/norse</item>
        <item name="fontFamily">@font/norse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/bodyFontColor</item>
    </style>

    <style name="EastRegular" parent = "AutoTextSizeBody">
        <item name="android:fontFamily">@font/eastseadokdo</item>
        <item name="fontFamily">@font/eastseadokdo</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/bodyFontColor</item>
    </style>

    <style name="TimeRegular" parent = "AutoTextSizeBody">
        <item name="android:fontFamily">@font/digitaldream</item>
        <item name="fontFamily">@font/digitaldream</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/bodyFontColor</item>
    </style>
    <style name="TimeBold" parent = "AutoTextSizeBody">
        <item name="android:fontFamily">@font/digitaldream</item>
        <item name="fontFamily">@font/digitaldream</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/bodyFontColor</item>
    </style>
    <style name="TimeBoldNarrow" parent = "AutoTextSizeBody">
        <item name="android:fontFamily">@font/digitaldream</item>
        <item name="fontFamily">@font/digitaldream</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">?attr/bodyFontColor</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat">
        <item name="colorControlActivated">?attr/switchColor</item>
    </style>
    <style name="RequestRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">?attr/bodyFontColor</item>
        <item name="colorControlActivated">?attr/titleFontColor</item>
    </style>

    <declare-styleable name="GhostView">
        <attr name="showText" format="boolean" />
        <attr name="labelPosition" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="EvidenceView">
        <attr name="color" format="color" />
    </declare-styleable>
</resources>