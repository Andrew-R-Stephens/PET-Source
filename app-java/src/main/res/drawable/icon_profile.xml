<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval" >

            <solid
                android:color="?attr/theme_colorPrimary" />

            <size
                android:width="48dp"
                android:height="48dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">

            <solid
                android:color="@color/black"
                />

        </shape>
    </item>

    <item>
        <bitmap
            android:src="?attr/theme_badge"
            android:alpha=".7">
        </bitmap>
    </item>

    <item>
        <shape
            android:shape="oval">
            <stroke
                android:color="?attr/theme_colorPrimary"
                android:width="4dp"
                />
            <padding
                android:right="4dp"
                android:bottom="4dp"
                android:left="4dp"
                android:top="4dp"
                />
        </shape>
    </item>

</layer-list>