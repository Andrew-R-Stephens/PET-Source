<?xml version="1.0" encoding="utf-8"?>

<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <item>
            <shape>
                <size android:height="200dp" android:width="200dp"/>
            </shape>
        </item>

        <item
            android:drawable="@drawable/evidence_item_layer_grid"/>

        <item
            android:id="@+id/ic_type"
            android:drawable="@drawable/icon_shop_crucifix_1"
            android:left="10dp"
            android:right="10dp"
            android:top="10dp"
            android:bottom="10dp" >
        </item>
        <item
            android:id="@+id/ic_tier"
            android:left="2dp">

            <scale
                android:scaleWidth="75%"
                android:scaleHeight="75%"
                android:scaleGravity="start|top"
                android:drawable="@drawable/equipment_tier_square" />

        </item>
        <item
            android:id="@+id/ic_border">
            <selector>
                <item
                    app:state_selected ="false">
                    <shape>
                        <stroke
                            android:width="2dp"
                            android:color="?attr/codex_2"/>
                    </shape>
                </item>
                <item
                    app:state_selected ="true">
                    <shape>
                        <stroke
                            android:width="2dp"
                            android:color="?attr/codex_4"/>
                    </shape>
                </item>
            </selector>

        </item>

    </layer-list>
