<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item>
        <shape>
            <solid android:color="@color/transparent"/>
            <size android:height="48dp" android:width="48dp"/>
        </shape>
    </item>

    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <level-list>
            <item
                android:minLevel="0"
                android:maxLevel="1">
                <selector>
                    <item app:state_selected="true">
                        <bitmap
                            android:src="@drawable/icon_negative_selected"
                            android:tintMode="multiply"
                            android:tint="?attr/negativeSelColor">
                        </bitmap>
                    </item>
                    <item app:state_selected="false">
                        <bitmap
                            android:src="@drawable/icon_negative_unselected"
                            android:tintMode="multiply"
                            android:tint="?attr/neutralSelColor">
                        </bitmap>
                    </item>
                </selector>
            </item>
            <item
                android:minLevel="2"
                android:maxLevel="2">
                <selector>
                    <item app:state_selected="true">
                        <bitmap
                            android:src="@drawable/icon_inconclusive_selected"
                            android:tintMode="multiply"
                            android:tint="?attr/neutralSelColor">
                        </bitmap>
                    </item>
                    <item app:state_selected="false">
                        <bitmap
                            android:src="@drawable/icon_inconclusive_unselected"
                            android:tintMode="multiply"
                            android:tint="?attr/neutralSelColor">
                        </bitmap>
                    </item>
                </selector>
            </item>
            <item
                android:minLevel="3"
                android:maxLevel="3">
                <selector>
                    <item app:state_selected="true">
                        <bitmap
                            android:src="@drawable/icon_positive_selected"
                            android:tintMode="multiply"
                            android:tint="?attr/positiveSelColor">
                        </bitmap>
                    </item>
                    <item app:state_selected="false">
                        <bitmap
                            android:src="@drawable/icon_positive_unselected"
                            android:tintMode="multiply"
                            android:tint="?attr/neutralSelColor">
                        </bitmap>
                    </item>
                </selector>
            </item>
        </level-list>
    </item>


</layer-list>