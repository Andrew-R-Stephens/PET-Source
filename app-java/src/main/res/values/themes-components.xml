<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- COMPONENT STYLING -->
    <style name="Theme.PhasmophobiaEvidenceTool.Onboarding" parent="Theme.AppCompat.Leanback.Onboarding">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:textViewStyle">?attr/primaryFont_Regular_AutoSqueeze</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:statusBarColor">?attr/colorOnSecondary</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="foregroundColor">@color/white</item>
        <item name="middlegroundColor">@color/white_M400</item>
        <item name="backgroundColor" >@color/black</item>
        <!--<item name="backgroundColorOnBackground" >@color/black_M50</item>-->
        <item name="backgroundColorOnBackground" >#191616</item>
        <item name="statusBarColor" >?attr/backgroundColor</item>
        <item name="navigationBarColor" >?attr/backgroundColor</item>
        <item name="windowBackgroundColor">@color/black</item>
        <item name="windowStrokeColor">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="navigationFooterIcon">?attr/unselectedColor</item>
        <item name="navigationFooterIconAlt">@color/white_M200</item>
    </style>

    <style name="PET.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="enforceMaterialTheme">false</item>
        <item name="android:checkable">true</item>
        <!--<item name="android:background">@color/transparent</item>-->
        <item name="itemIconTint">?attr/navigationFooterIcon</item>
        <item name="itemTextAppearanceInactive">?attr/navigationFooterIcon</item>
        <item name="itemTextAppearanceActive">?attr/navigationFooterIconAlt</item>
        <item name="itemTextColor">@null</item>
        <item name="itemRippleColor">?attr/unselectedColor</item>
        <item name="rippleColor">?attr/unselectedColor</item>
        <item name="simpleItemSelectedRippleColor">?attr/unselectedColor</item>

        <item name="compatShadowEnabled">false</item>
    </style>

    <style name="PET.SideNavigationView" parent="Theme.MaterialComponents">

        <item name="enforceMaterialTheme">false</item>
        <item name="android:checkable">false</item>

        <item name="itemIconTint">?attr/navigationFooterIcon</item>
        <item name="itemTextAppearanceInactive">?attr/navigationFooterIcon</item>
        <item name="itemTextAppearanceActive">?attr/navigationFooterIconAlt</item>
        <item name="itemTextColor">@null</item>
        <item name="itemRippleColor">?attr/unselectedColor</item>
        <item name="rippleColor">?attr/unselectedColor</item>
        <item name="simpleItemSelectedRippleColor">?attr/unselectedColor</item>

        <item name="compatShadowEnabled">false</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="itemIconSize">@dimen/navbar_icon_size</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemPaddingTop">@dimen/navbar_margin</item>
        <item name="itemPaddingBottom">@dimen/navbar_label_padding</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:minWidth">@dimen/navbar_min</item>
        <item name="enforceTextAppearance">true</item>
        <item name="itemBackground">@null</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="tabRippleColor">?attr/unselectedColor</item>
        <item name="tabUnboundedRipple">?attr/unselectedColor</item>
        <item name="android:colorControlHighlight">?attr/unselectedColor</item>

        <item name="itemMinHeight">@null</item>
        <item name="menuGravity">center</item>
        <item name="android:fitsSystemWindows">true</item>

        <!--<item name="background">?attr/backgroundColor</item>-->
    </style>

    <style name="PET.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="enforceMaterialTheme">false</item>
        <item name="android:checkable">false</item>
        <item name="cardElevation">15dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="CodexGridCard" parent="PET.MaterialCardView">

    </style>

    <style name="PET.ProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="android:tintMode">multiply</item>
        <item name="android:tint">?attr/selectedColor</item>
        <item name="android:indeterminateDrawable">@drawable/phasmophobia_logo_letter_sm</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item><!-- text size in menu-->
        <item name="textAppearanceListItemSmall">?attr/quaternaryFont_Regular_Manual</item>
        <item name="textAppearanceListItemSecondary">?attr/quaternaryFont_Regular_Manual</item>
        <item name="textAppearanceListItem">?attr/quaternaryFont_Regular_Manual</item>
        <item name="android:textAppearance">?attr/quaternaryFont_Regular_Manual</item>

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="listPreferredItemHeightSmall">40dp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>

        <item name="android:background">?attr/backgroundColor</item>
        <item name="itemTextColor">?attr/textColorBody</item>
        <item name="iconTint">?attr/textColorBody</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat">
        <item name="colorControlActivated">?attr/switchColorOn</item>
        <item name="colorSwitchThumbNormal">?attr/switchColorOff</item>
    </style>

    <style name="RequestRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">?attr/textColorBody</item>
        <item name="colorControlActivated">?attr/textColorPrimary</item>
    </style>

    <style name="MapMenuItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/backgroundColorOnBackground</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="strokeColor">?attr/light_off</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>